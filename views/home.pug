extends layout

block content
  h1 BC House
  p.lead A web scrapping tool
  hr
  form(action="/api/house", method="POST")
    .form-group
      input(type='hidden', name='_csrf', value=_csrf)
      select(name="AreaID", class="form-control")
        option(value="11", selected="") BU. Burnaby
        option(value="16") CQ. Coquitlam
        option(value="20") NV. North Vancouver
        option(value="12") NW. New Westminster
        option(value="17") PQ. Port Coquitlam
        option(value="13") RI. Richmond
        option(value="11") VE. Vancouver East
        option(value="9")  VW. Vancouver West
        option(value="19") WV. West Vancouver
      button(type="submit", class="btn btn-default") Submit